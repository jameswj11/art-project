<!DOCTYPE html>
<html>
 <% include ../partials/head %>
<body>
  <% if(user) { %>
    <div class="logout">
      <form class="logout" action="user/logout?_method=DELETE" method="post">
        <input class="logoutButton" type="submit" value="logout">
      </form>
    </div>
  <% } %>
  <div class="gallery">
    <h3 class="browse">Browse Art</h3>
    <p id="save">Double-click an image to save to your collection.</p>
    <div class="filter">
      <input class="artist" type="text" placeholder="Artist">
      <select class="type" name="select" id="">
        <option class="all" value="all">All Results</option>
        <option class="painting" value="painting">Paintings</option>
        <option class="photograph" value="photograph">Photographs</option>
        <option class="drawing" value="drawing">Drawings</option>
        <option class="print" value="print">Prints</option>
      </select>
      <button id="searchButton">SEARCH</button><br><br>
    </div>
    <div class="goToCollection">
      <a href="/collection">Go to My Collection</a><br><br>
    </div>
    <div class="onLoad">
      <div id="grid" class="container" data-columns>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
    <div id="gridLarge" class="searchResults" data-columns>
      <div></div>
      <div></div>
    </div>
  </div>
  <script src="js/salvattore.min.js"></script>
</body>
</html>
