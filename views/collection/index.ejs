<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="stylesheet" href="/bower_components/skeleton/css/normalize.css">
  <link rel="stylesheet" href="/bower_components/skeleton/css/skeleton.css">
  <link rel="stylesheet" href="/css/styles.css">
  <script type="text/javascript" src="/bower_components/jquery/dist/jquery.js">
  </script>
  <script type="text/javascript" src="../js/collection.js"></script>
</head>
<body>
<% if(user) { %>
  <div class="logout">
    <form class="logout" action="user/logout?_method=DELETE" method="post">
      <input class="logoutButton" type="submit" value="logout">
    </form>
  </div>
<% } %>
<h3 class="collection">MY COLLECTION</h3>
  <div>
    <a href="/rijks">Browse Art</a><br><br>
  </div>

  <div id="gridLarge" class="myCollection" data-columns>
  <% if(favorites){ %>
    <% favorites.forEach(function(art){ %>
      <div>
        <img class="large" src="<%= art.source %>" alt="">
        <p class="description"><%= art.info %></p>
        <p class="deleteLink">DELETE</p>
      </div>
    <% }) %>
  <% } %>
  </div>
</body>
<script src="js/salvattore.min.js"></script>
</html>
